<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_c"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff1ca8f4"
    tools:context=".AddCategoryActivity$AddFragment" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context="com.iceteck.hivoteplus.AddCategoryActivity$PlaceholderFragment" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:drawableRight="@drawable/categorie"
            android:ems="10"
            android:hint="@string/category_add_title"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="#000" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:id="@+id/previewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageViewThumbnail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/categorie" />

            <Button
                android:id="@+id/buttonThumbpick"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#000"
                android:drawableBottom="@drawable/pick"
                android:text="@string/thumbpick" />

        </LinearLayout>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:drawableRight="@android:drawable/ic_dialog_info"
            android:ems="10"
            android:hint="@string/categroy_description_hint"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/add_nominee"
            android:textColor="#000"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/nomineeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/nominee1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:drawableRight="@drawable/user"
                android:ems="10"
                android:hint="@string/nominee"
                android:inputType="textPersonName"
                android:lines="2"
                android:maxLines="2"
                android:textColor="#000" />

            <EditText
                android:id="@+id/nominee1description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:drawableRight="@android:drawable/btn_star"
                android:ems="10"
                android:hint="@string/profile_nomination"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColor="#000" />

            <EditText
                android:id="@+id/nominee2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:drawableRight="@drawable/user"
                android:ems="10"
                android:hint="@string/nominee"
                android:inputType="textPersonName"
                android:lines="2"
                android:maxLines="2"
                android:textColor="#000" />

            <EditText
                android:id="@+id/nominee2description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:drawableRight="@android:drawable/btn_star"
                android:ems="10"
                android:hint="@string/nomination"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/btnAddNominee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#fff"
                android:contentDescription="@string/add_nominee"
                android:scaleType="fitXY"
                android:src="@android:drawable/ic_input_add" />

            <Button
                android:id="@+id/buttonAddCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00aa00"
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:text="@string/saven" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
