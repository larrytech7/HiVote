<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/errImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/common_google_play_services_network_error_title"
        android:scaleType="centerInside"
        android:src="@drawable/err_network" />

    <TextView
        android:id="@+id/errTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/err_empty_netwk_comments"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
